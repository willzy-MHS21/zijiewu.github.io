---
const WEB3FORMS_KEY = import.meta.env.PUBLIC_WEB3FORMS_KEY;
---

<section class="min-h-screen flex items-center py-8 px-4">
    <div class="container max-w-2xl mx-auto w-full">
        <div class="mb-6">
            <h2
                class="text-5xl font-bold mb-4 bg-gradient-to-br from-white to-gray-500 bg-clip-text text-transparent leading-tight"
            >
                Contact Me
            </h2>
        </div>

        <div
            class="border-4 border-white/30 rounded-xl p-2 bg-gradient-to-br from-white/10 to-white/5"
        >
            <form action="https://api.web3forms.com/submit" method="POST" id="contactForm" class="p-6 rounded-lg shadow-2xl">
                
                <input type="hidden" name="access_key" value={WEB3FORMS_KEY} />
                <input type="hidden" name="redirect" value="false" />

                <div class="mb-6">
                    <label for="name" class="block mb-2 text-white font-medium"
                        >Name *</label
                    >
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        placeholder="Your name"
                        class="w-full px-4 py-3 bg-gray-900 text-white border-2 border-gray-700 rounded-lg focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/20 transition-all placeholder:text-gray-500"
                    />
                </div>

                <div class="mb-6">
                    <label for="email" class="block mb-2 text-white font-medium"
                        >Email *</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        placeholder="your.email@example.com"
                        class="w-full px-4 py-3 bg-gray-900 text-white border-2 border-gray-700 rounded-lg focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/20 transition-all placeholder:text-gray-500"
                    />
                </div>

                <div class="mb-6">
                    <label
                        for="subject"
                        class="block mb-2 text-white font-medium"
                        >Subject *</label
                    >
                    <input
                        type="text"
                        id="subject"
                        name="subject"
                        required
                        placeholder="What is this about?"
                        class="w-full px-4 py-3 bg-gray-900 text-white border-2 border-gray-700 rounded-lg focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/20 transition-all placeholder:text-gray-500"
                    />
                </div>

                <div class="mb-6">
                    <label
                        for="message"
                        class="block mb-2 text-white font-medium"
                        >Message *</label
                    >
                    <textarea
                        id="message"
                        name="message"
                        rows="6"
                        required
                        placeholder="Your message here..."
                        class="w-full px-4 py-3 bg-gray-900 text-white border-2 border-gray-700 rounded-lg focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/20 transition-all resize-y min-h-[120px] placeholder:text-gray-500"
                    ></textarea>
                </div>

                <!-- hCaptcha Widget with Web3Forms site key -->
                <div class="mb-6 flex justify-center">
                    <div class="h-captcha" data-sitekey="50b2fe65-b00b-4b9e-ad62-3ba471098be2"></div>
                </div>

                <button
                    type="submit"
                    class="w-full px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg text-lg font-semibold hover:shadow-lg hover:-translate-y-0.5 active:translate-y-0 transition-all disabled:opacity-60 disabled:cursor-not-allowed"
                >
                    Send Message
                </button>

                <div
                    id="result"
                    class="mt-4 p-4 rounded-lg text-center font-medium hidden"
                >
                </div>
            </form>
        </div>

        <!-- Separator with "or" -->
        <div class="flex items-center my-6 mb-1">
            <div class="flex-1 h-[4px] bg-white/30"></div>
            <span
                class="px-4 text-white text-lg font-medium uppercase tracking-wider"
                >or</span
            >
            <div class="flex-1 h-[4px] bg-white/30"></div>
        </div>

        <!-- Social Links -->
        <div class="flex justify-center gap-6">
            <!-- GitHub -->
            <a
                href="https://github.com/willzy-MHS21"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center rounded-full shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-300"
                aria-label="GitHub Profile"
            >
                <img
                    src="/github.png"
                    alt="GitHub"
                    class="w-16 h-16 object-contain"
                />
            </a>

            <!-- LinkedIn -->
            <a
                href=""
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center rounded-full shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-300 group"
                aria-label="LinkedIn Profile"
            >
                <img
                    src="/linkin.png"
                    alt="LinkedIn"
                    class="w-27 h-27 object-contain"
                />
            </a>
        </div>
    </div>
</section>

<!-- Load hCaptcha script with reCaptchaCompat disabled -->
<script src="https://js.hcaptcha.com/1/api.js?recaptchacompat=off" async defer></script>

<script is:inline>
  const form = document.getElementById("contactForm");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);
    result.innerHTML = "Sending...";
    result.classList.remove("hidden");
    result.className = "mt-4 p-4 rounded-lg text-center font-medium bg-blue-100 text-blue-800 border border-blue-200";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.innerHTML = "Message sent successfully! I'll get back to you soon.";
          result.className = "mt-4 p-4 rounded-lg text-center font-medium bg-green-100 text-green-800 border border-green-200";
          form.reset();
          if (typeof hcaptcha !== 'undefined') {
            hcaptcha.reset();
          }
        } else {
          console.log(response);
          result.innerHTML = json.message || "Something went wrong!";
          result.className = "mt-4 p-4 rounded-lg text-center font-medium bg-red-100 text-red-800 border border-red-200";
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "Something went wrong!";
        result.className = "mt-4 p-4 rounded-lg text-center font-medium bg-red-100 text-red-800 border border-red-200";
      })
      .then(function () {
        setTimeout(() => {
          result.classList.add("hidden");
        }, 5000);
      });
  });
</script>